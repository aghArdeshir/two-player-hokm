{
  "name": "two-player-hokm",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev-frontend": "NODE_ENV=development parcel frontend/index.html",
    "dev-backend": "NODE_ENV=development ts-node-dev backend/index.ts",
    "start": "concurrently \"npm run dev-frontend\" \"npm run dev-backend\"",
    "build-frontend": "parcel build frontend/index.html --public-url . --out-dir dist/backend/hokm/; cp frontend/favicon.ico dist/backend/hokm/",
    "build-backend": "tsc -p tsconfig.json",
    "build": "rm -rf dist; npm run build-frontend; npm run build-backend",
    "update": "git fetch; git pull; npm i; npm run build; pm2 restart all"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@types/socket.io": "^2.1.13",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "pm2": "^4.5.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-jss": "^10.5.0",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "uuid": "^8.3.2"
  }
}
